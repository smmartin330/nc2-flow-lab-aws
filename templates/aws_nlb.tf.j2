data "aws_security_groups" "pc_{{ number }}_security_group" {
  tags = {
    "tag:nutanix:clusters:external:networks" = "{{ pc_subnet_cidr }}"
  }
}

resource "aws_lb_target_group" "{{ name }}-lb-tg" {
  name        = "{{ name }}-lb-tg"
  port        = 9440
  protocol    = "TCP"
  target_type = "ip"
  vpc_id      = aws_vpc.vpc.id
}

resource "aws_lb_target_group_attachment" "{{ name }}-lb-tg-attach" {
  target_group_arn = aws_lb_target_group.{{ name }}-lb-tg.arn
  target_id        = "{{ pc_vip }}"
  port             = 9440
}

resource "aws_lb_listener" "{{ name }}-listener" {
  load_balancer_arn = aws_lb.{{ project }}-{{ number }}-nlb.arn
  port              = "{{ 9440  }}"
  protocol          = "TCP"

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.{{ name }}-lb-tg.arn
  }
}

resource "aws_vpc_security_group_ingress_rule" "pc_{{ number }}_nlb_ingress" {
  security_group_id = data.aws_security_groups.pc_{{ number }}_security_group.ids.0
  referenced_security_group_id = aws_security_group.{{ project }}-nlb-sg.id
  from_port         = 9440
  ip_protocol       = "tcp"
  to_port           = 9440
}


